<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Burton in Stock</title>
    <style>
        body {
            font-size: 1rem;
            padding: 0;
            margin: 0;
            font-family: "IBM Plex Sans", -apple-system, "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        }
        
        ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }
        
        a {
            color: inherit;
            text-decoration: none;
        }
        
        * {
            box-sizing: border-box;
        }
        
        @media only screen and (max-width: 768px) {
            html {
                font-size: small;
            }
        }
        /* Medium devices (landscape tablets, 768px and up) */
        
        @media only screen and (min-width: 768px) {
            html {
                font-size: medium;
            }
        }
        /* Large devices (laptops/desktops, 992px and up) */
        
        @media only screen and (min-width: 992px) {
            html {
                font-size: large;
            }
        }
        /* Extra large devices (large laptops and desktops, 1200px and up) */
        
        @media only screen and (min-width: 1200px) {
            html {
                font-size: larger;
            }
        }
        
        @media only screen and (min-width: 1440px) {
            html {
                font-size: x-large;
            }
        }
        
        .layout {
            max-width: 960px;
            margin: 0 auto;
        }
        
        .topbar {
            display: flex;
            justify-content: center;
            height: 8rem;
        }
        
        .container {
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        
        ul {
            margin-top: 1rem;
            width: 90%;
            padding: .5em 0;
            display: flex;
            flex-direction: column;
            border: 1px solid #000000;
        }
        
        li {
            display: grid;
            margin: .5rem 0;
            grid-template-columns: 4fr 8fr;
            align-items: center;
        }
        
        li>span:first-child {
            text-align: center;
            text-transform: capitalize;
        }
        
        a {
            background-color: rgb(97, 142, 240);
            color: #fff;
            padding: .3rem .5rem;
            border-radius: .2rem;
        }
    </style>
</head>

<body>
    <div class="layout">
        <div class="topbar">
            <img src="https://www.mountaincreek.com/sites/default/files/inline-images/vlMaC3H9KGkuJeAjvVxdQA-Burton1_0.JPG" alt="">
        </div>
        <div class="container">
            <% demand.forEach(product => { %>
                <ul>
                    <% Object.keys(product).forEach(key => { %>
                        <% if (["id", "name", "color", "size", "addToCartLink"].includes(key)) { %>
                            <li><span><%= key %></span><span>
                            <% if (key === "addToCartLink") { %>
                                <a href="https://www.burton.com<%= product[key] %>.html" target="_blank">Add to Cart</a>
                                <% } else { %>
                                    <%= product[key] %> 
                                    <% } %>
                                   </span></li>
                            <% } %>
                                <% }) %>
                </ul>
                <% }) %>
        </div>
    </div>
</body>

</html>